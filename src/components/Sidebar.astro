---
import { Data } from '../database.js';
import IconHome from '../svgs/IconHome.astro';
---

<aside class='flex flex-col px-10 py-8 border-r-[0.2px] border-colorAccent'>
  <button class='mb-4 flex gap-2 items-center h-8'>
    <IconHome />
    <strong>Home</strong>
  </button>
  <div class='flex flex-col gap-4'>
    {
      Object.entries(Data.categories).map(([category, items]) => (
        <button class='flex justify-between items-center h-8 cursor-pointer'>
          <strong>{category}</strong>
          <div class='bg-colorTextLight text-colorBackground rounded-[10px] px-2 items-center'>
            {items.length}
          </div>
        </button>
      ))
    }
  </div>
</aside>
